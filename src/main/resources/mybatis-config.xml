<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <settings>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>

    <typeAliases>
        <typeAlias type="kr.ac.kopo.YourTrip.Vo.Board" alias="Board"/>
        <typeAlias type="kr.ac.kopo.YourTrip.Vo.Member" alias="Member"/>
        <typeAlias type="kr.ac.kopo.YourTrip.Vo.Reply" alias="Reply"/>
        <typeAlias type="kr.ac.kopo.YourTrip.Vo.Hash" alias="Hash"/>
        <typeAlias type="kr.ac.kopo.YourTrip.Vo.Attach" alias="Attach"/>
    </typeAliases>

    <mappers>
        <mapper resource="mybatis/board.xml"/>
        <mapper resource="mybatis/member.xml"/>
        <mapper resource="mybatis/reply.xml"/>
        <mapper resource="mybatis/attach.xml"/>
    </mappers>

</configuration>